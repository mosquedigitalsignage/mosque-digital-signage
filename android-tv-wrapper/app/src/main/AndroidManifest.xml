<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for loading web content -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Network state permission for connectivity checks -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Wake lock permission for keeping screen on -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Keep screen on permission -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Prevent device from sleeping -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <!-- Keep CPU awake -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- TV-specific features -->
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <!-- Touch screen not required for TV -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:logo="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MosqueSignage"
        android:banner="@drawable/banner"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Main TV activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:icon="@mipmap/ic_launcher"
            android:logo="@mipmap/ic_launcher"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.MosqueSignage.Fullscreen"
            android:launchMode="singleTask"
            android:clearTaskOnLaunch="true"
            android:finishOnTaskLaunch="false"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:hardwareAccelerated="true">

            <!-- TV launcher intent -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>

            <!-- Regular launcher intent (for testing) -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- TV banner image -->
        <meta-data
            android:name="banner"
            android:resource="@drawable/banner" />

        <!-- Launcher icon for TV home screen -->
        <meta-data
            android:name="android.app.icon"
            android:resource="@mipmap/ic_launcher" />

    </application>

</manifest>
